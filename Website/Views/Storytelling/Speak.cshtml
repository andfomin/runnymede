<div ng-app="myApp" ng-cloak>
    <div ng-controller="Speak">
        <button class="btn btn-default" ng-click="vm.newStory()">New story</button>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="embed-responsive embed-responsive-16by9">
                    <video id="myVideo" controls></video>
                </div>
            </div>
        </div>

    </div><!-- /ng-controller -->
    <!-- Modals -->
    <!-- chooseRootCategory.html -->
    <script type="text/ng-template" id="chooseRootCategory.html">
        <div class="modal-header">
            <h3>Choose a category</h3>
        </div>
        <div class="modal-body">
            <div class="list-group">
                <a class="list-group-item app" href="" ng-repeat="c in vm.rootCategories" ng-click="vm.ok(c)">
                    <span class="app-appblue">{{c.title}}</span>
                </a>
            </div>

        </div>
        <div class="modal-footer">
            <a href="" class="app-close" ng-click="vm.cancel()">Cancel</a>
        </div>
    </script>
    <!-- /chooseRootCategory.html -->
    <!-- /Modals -->
</div><!-- /ng-app -->
@section BottomScripts {
    @Scripts.Render(
"~/bundles/angular",
"~/bundles/angular-libs",
"~/bundles/ext-libs",
"~/bundles/app-utils",
"~/app/storytelling/speak.js"
)
}
