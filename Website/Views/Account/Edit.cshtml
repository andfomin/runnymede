@{
    ViewBag.NavItem = "Account";
    var pageViewModel = new Runnymede.Website.Models.PageViewModel(this);
}
<div ng-app="myApp" ng-cloak>
    <div class="row">
        <div class="col-sm-6">
            <h3 class="page-header app">{{pageTitle}} <small>{{secondaryTitle}}</small></h3>
        </div>
        <div class="col-sm-6">
            <ul class="nav nav-pills app-margin-bottom app-nav-pills">
                <li data-ui-sref-active="active"><a href="" data-ui-sref="personal">Personal</a></li>
                <li data-ui-sref-active="active"><a href="" data-ui-sref="logins">Logins</a></li>
                @if (pageViewModel.IsTeacher)
                {
                    <li data-ui-sref-active="active"><a href="" data-ui-sref="teacher">Teacher</a></li>
                }
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10 ">
            <div data-ui-view></div>
        </div>
    </div>
    </div><!-- /ng-app="myApp" -->
@section BottomScripts {
    @Scripts.Render(
"~/bundles/angular",
"~/bundles/angular-libs",
"~/bundles/ext-libs",
"~/bundles/app-utils",
"~/bower_installer/ngUpload/ng-upload.min.js",
"~/app/account/edit-personal.js",
"~/app/account/edit-logins.js",
"~/app/account/edit-teacher.js",
"~/app/account/edit-app.js"
)
}

