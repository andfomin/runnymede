        </ul>
    </div>
    <div class="col-md-5" ng-if="isVisible">
        <h4>Terms of Service</h4>
        <div id="tos">
            <small>
                @Html.Partial("_TermsOfServicePartial")
            </small>
        </div>
    </div>
</div>
@section BottomScripts {
    @Scripts.Render(
"~/bundles/angular",
"~/bundles/angular-libs",
"~/bundles/ext-libs",
"~/bundles/app-utils",
"~/App/Account/signup-app.js"
)
}
