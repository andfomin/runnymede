@{
    ViewBag.Title = "Sign in";

    string alertText = null;
    string alertStyle = null;
    var query = Request.Url.Query;
    if (!string.IsNullOrEmpty(query))
    {
        if (query.Contains("password-changed"))
        {
            alertText = "Password changed.";
            alertStyle = "alert-info";
        }
        else
        {
            if (query.Contains("confirmed=True"))
            {
                alertText = "Your email address has successfully been confirmed. Thank you!";
                alertStyle = "alert-success";
            }
            else
            {
                if (query.Contains("confirmed=False"))
                {
                    alertText = "There was a problem while confirming your email address.";
                    alertStyle = "alert-danger";
                }
            }
        }
    }
}
@if (!string.IsNullOrEmpty(alertText))
{
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6 alert @alertStyle">
            <p class="text-center">
                @alertText
            </p>
        </div>
    </div>
}
<form class="form-horizontal" name="mainForm" role="form" data-ng-app="app" data-ng-controller="Ctrl" novalidate>
    <div class="form-group">
        <label for="userName" class="col-sm-4 control-label">Email address</label>
        <div class="col-sm-5">
            <input type="email" id="userName" class="form-control" name="userName" data-ng-model="vm.userName" placeholder="English Cosmos account email address" required autofocus />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-4 control-label">Password</label>
        <div class="col-sm-5">
            <input type="password" id="password" class="form-control" name="password" data-ng-model="vm.password" placeholder="English Cosmos account password" required data-ng-minlength="6" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-6">
            <div class="checkbox">
                <label>
                    <input type="checkbox" data-ng-model="vm.persistent" />&nbsp;Remember me (for a maximum of 14 days)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-6">
            <button type="submit" class="btn btn-primary" data-ng-click="vm.post(mainForm)" data-ng-disabled="mainForm.$invalid || vm.sending">Sign in &raquo;</button>
        </div>
    </div>
</form>
@Html.HrSeparator("col-sm-offset-2 col-sm-8")
<div class="col-sm-offset-4 col-sm-6">
    Forgot your password? @Html.ActionLink(HttpUtility.HtmlDecode("Reset here"), "ForgotPassword", "Account")
    <br />
    Not yet a member? @Html.ActionLink(HttpUtility.HtmlDecode("Join here"), "Create", "Account")
</div>

@section BottomScripts {
    @Scripts.Render(
"~/bundles/angular",
"~/bundles/ext-libs",
"~/bundles/app-utils",
"~/App/Account/utils-account.js",
"~/App/Account/signin-app.js"
)

    @* Pass ReturnUrl from the server to the client. *@
    <script type="text/javascript">
        var App = App || {};
        App.returnUrl = '@Html.Raw(ViewBag.ReturnUrl)';
    </script>
}