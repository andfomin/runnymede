@{
    ViewBag.Title = "Change password after reset";
}

<div data-ng-app="app" data-ng-controller="Ctrl">
    <form class="form-horizontal" name="mainForm" role="form" novalidate>
        <div class="form-group">
            <label class="col-sm-5 control-label" for="password1">New password</label>
            <div class="col-sm-3">
                <input type="password" id="password1" class="form-control" name="password1" data-ng-model="vm.password1" ng-minlength="6" required />
                <p class="help-block"><small>Minimum 6 characters.</small></p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label" for="password2">New password again</label>
            <div class="col-sm-3">
                <input type="password" id="password2" class="form-control" name="password2" data-ng-model="vm.password2" ng-minlength="6" required />
                <p class="help-block">&nbsp;</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6">
                <button type="submit" class="btn btn-primary" data-ng-click="vm.post(mainForm)" data-ng-disabled="mainForm.$invalid || vm.sending">Send email</button>
            </div>
        </div>
    </form>
</div>

@section BottomScripts {
    @Scripts.Render(
"~/bundles/angular",
"~/bundles/ext-libs",
"~/bundles/app-utils",
"~/App/Account/reset-app.js"
)
}
