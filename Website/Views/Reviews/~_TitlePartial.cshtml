@model System.String

<form class="form-horizontal" data-bind="submit: saveTitle">
    <div class="control-group">
        <div class="control-group">
            <label id="titleLabel" class="control-label" for="title">Title</label>
            <div class="controls" id="titleDiv" data-bind="with: @(Model)">
                <input type="text" id="title" class="input-block-level" data-bind="value: title, event: { blur: $root.saveTitle }" required />
            </div>
        </div>
    </div>
</form>

