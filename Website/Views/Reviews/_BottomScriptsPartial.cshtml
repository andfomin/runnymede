@* Pass params from the controller to the ViewModel without an AJAX call. 
   Wrapped into a self-invocked function to workaround Visual Studio editor's code analyser warning on syntax error. *@
<script type="text/javascript">
    var App = App || {};
    App.exerciseParam = (function () { return @Html.Raw(ViewBag.ExerciseParamJson); })();
    App.soundUrlParam = '@Html.Raw(ViewBag.SoundUrlParam)';
</script>

@Scripts.Render(
"~/bundles/jqueryui",
"~/bundles/knockout",
"~/bundles/jsextlibs",
"~/bundles/ext-libs",
"~/bundles/app",
"~/App/Reviews/vm-base.js"
    )


