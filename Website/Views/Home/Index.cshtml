@{
    ViewBag.NavItem = "Home";
    bool isAuthenticated = Request.IsAuthenticated;
}
<style type="text/css">
    #myJumbotron {
        padding: 32px 0;
    }

        #myJumbotron .btn.btn-primary.btn-lg {
            border-top-color: rgb(0,158,234);
            border-left-color: rgb(0,158,234);
            border-right-color: rgb(0,158,234);
        }

    #myContainer {
        margin: 0;
        overflow: hidden;
    }

        #myContainer > div {
            float: left;
        }

    #myList > ul {
        margin: 0;
        padding: 0 5px;
        list-style: none;
        font-size: 17px;
        cursor: pointer;
    }

    #myList li:before {
        display: inline-block;
        margin-right: 10px;
        width: 12px;
        height: 12px;
        border-radius: 12px;
        border: 3px solid #ac1f28; /* appRed */
        background-color: white;
        content: " ";
    }

    #myList li.active:before {
        border-color: white;
    }

    .my-shadow {
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
    }

    #myCall {
        padding-right: 10px;
    }

    #myCarousel {
        margin-top: 32px;
    }

    .carousel-control {
        width: 10%;
    }

    .carousel-inner .item .my-screenshot {
        padding: 0;
        overflow: hidden;
    }

        /* +http://www.cssmatic.com/box-shadow */
        .carousel-inner .item .my-screenshot img {
            margin: 0 auto;
            /*box-shadow: 0px 0px 20px 20px white;*/
            border-radius: 3px;
        }

    .carousel-inner .item .my-description {
        padding: 20px 25px 0;
        font-size: 16px;
    }

    #myCopy {
        font-size: 16px;
    }

    @@media (max-width: 768px) {
        .carousel-inner .item .my-description {
            min-height: 100px;
        }
    }

    @@media (max-width: 580px) {
        .carousel-inner .item .my-description {
            min-height: 170px;
        }
    }
</style>

<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="jumbotron app-margin-top" id="myJumbotron">
            <div class="text-center" style="padding:0 10px;">
                <h3 class="app-margin-top-none app-margin-bottom app-appyellow my-shadow">Learn&nbsp;English&nbsp;naturally. &nbsp;Pass&nbsp;the&nbsp;exam&nbsp;easily.</h3>
            </div>
            <div class="row" id="myContainer">
                <div class="my-space">&nbsp;</div>
                <div id="myList">
                    <ul>
                        <li class="my-indicator active" onclick="mySlideTo(0);">Get your speaking exercises reviewed by teachers</li>
                        <li class="my-indicator" onclick="mySlideTo(1);"><span class="app-appyellow my-shadow">New<span style="margin-left:1px;">!</span></span> Have your <em>handwritten</em> texts reviewed by teachers</li>
                        <li class="my-indicator" onclick="mySlideTo(2);">Let qualified teachers guide your preparation for IELTS</li>
                        <li class="my-indicator" onclick="mySlideTo(3);">Watch hundreds of lessons <span class="app-appyellow my-shadow">for&nbsp;free</span></li>
                    </ul>
                </div>
                @if (!isAuthenticated)
                {
                    <div class="hidden-xs my-space">&nbsp;</div>
                    <div class="hidden-xs" id="myCall">
                        @*@Html.ActionLinkWithProtocol("Join for free", "Signup", "Account", "https", new { @class = "btn btn-primary btn-lg" })*@
                        @Html.ActionLink("Try now", "Index", "ExercisesIelts", null, new { @class = "btn btn-primary btn-lg" })
                    </div>
                }
            </div>

            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="~/content/images/happy-learner.jpg">
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description">
                                @*You will progress faster if you get professional feedback about your speaking. You can get it any time you need&nbsp;it.*@
                                Improve your speaking skills by receiving expert advice, any time you need it.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="/content/images/writing.jpg">
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description">
                                You may want to be able to write 150 words in 20 minutes or 250 words in 40 minutes and you may want to know how good your writing is.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <a href='@Url.Action("Ielts", "Info")'>
                                    <img class="img-responsive" src="/content/images/teacher.jpg">
                                </a>
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description" style="padding-top:10px;">
                                @*You will progress faster and achieve better results if you know what exactly you need to improve. Teachers can help you with setting priorities and correcting your learning plan.*@
                                Our teachers can help you to progress faster by showing you exactly what you need to improve and how you can do it.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="/content/images/youtube-voa.jpg">
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description">
                                @*Although there are so many learning resources available, since they are all categorized and indexed, you can quickly find what you need and even compile your own collection.*@
                                Gain access to our huge collection of articles, exercises and videos. All the learning resources are categorized and indexed, so you can quickly find what you need. 
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div><!-- id="myCarousel" -->
            @if (!isAuthenticated)
            {
                <div class="visible-xs-block text-center app-margin-top">
                    @*@Html.ActionLinkWithProtocol("Join for free", "Signup", "Account", "https", new { @class = "btn btn-primary btn-lg" })*@
                    @Html.ActionLink("Try now", "Index", "ExercisesIelts", null, new { @class = "btn btn-primary btn-lg" })
                </div>
            }

        </div>
    </div>
</div>
<hr class="app-appred" />
