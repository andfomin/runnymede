            <div class="text-center">
                <h4 class="app-appred"><span class="text-nowrap">The best way to practice for</span> <span class="text-nowrap">the IELTS <strong>Reading</strong> test</span></h4>
            </div>
            <p>
                Did we mention that our online tests resemble the original test formats as close as possible?
                <a href='@Url.Action("Index", "ExercisesIelts")' class="text-nowrap"><strong>Try now</strong><i class="fa fa-chevron-right fa-fw"></i></a>
            </p>
        </div>
    </div>


</div>
@section BottomScripts {
    <script>
        var setSpace = function () {
            window.setTimeout(function () {
                var cn = $('#myContainer');
                var lt = $('#myList');
                var ca = $('#myCall');
                var caw = ca.outerWidth(); // null if absent, 0 if hidden
                var space = (cn.width() - lt.outerWidth() - caw) / (caw > 1 ? 3 : 2);
                $('.my-space').width(space);
                ca.css('padding-top', '0px'); // Workaround. Otherwise, if the window width jumps from minimum to maximum, cn.height() is bigger and the button is placed too low.
                var cap = (cn.height() - ca.height()) / 2;
                ca.css('padding-top', cap + 'px');
            }, 0);
        };
        $(window).resize(setSpace);
        $().ready(setSpace);

        $('#myCarousel').on('slide.bs.carousel', function (e) {
            var indicators = $('.my-indicator');
            if (indicators.length) {
                indicators.filter('.active').removeClass('active');
                var i = $('#myCarousel .item').index(e.relatedTarget);
                var next = indicators[i];
                next && $(next).addClass('active');
            }
        });

        function mySlideTo(to) {
            $('#myCarousel').carousel(to);
        };

        $(function () {
            $('[data-toggle="popover"]').popover()
        });

    </script>
}
