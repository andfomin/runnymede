@{
    ViewBag.NavItem = "Home";
    bool isAuthenticated = Request.IsAuthenticated;
}
<style type="text/css">
    #myJumbotron {
        padding: 32px 0;
    }

        #myJumbotron .btn.btn-primary.btn-lg {
            border-top-color: rgb(0,158,234);
            border-left-color: rgb(0,158,234);
            border-right-color: rgb(0,158,234);
        }

    #myContainer {
        margin: 0;
        overflow: hidden;
    }

        #myContainer > div {
            float: left;
        }

    #myList > ul {
        margin: 0;
        padding: 0 5px;
        list-style: none;
        font-size: 17px;
        cursor: pointer;
    }

    #myList li:before {
        display: inline-block;
        margin-right: 10px;
        width: 12px;
        height: 12px;
        border-radius: 12px;
        border: 3px solid #ac1f28; /* appRed */
        background-color: white;
        content: " ";
    }

    #myList li.active:before {
        border-color: white;
    }

    .my-shadow {
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
    }

    #myCall {
        padding-right: 10px;
    }

    #myCarousel {
        margin-top: 32px;
    }

    .carousel-control {
        width: 10%;
    }

    .carousel-inner .item .my-screenshot {
        padding: 0;
        overflow: hidden;
    }

        /* +http://www.cssmatic.com/box-shadow */
        .carousel-inner .item .my-screenshot img {
            margin: 0 auto;
            /*box-shadow: 0px 0px 20px 20px white;*/
            border-radius: 3px;
        }

    .carousel-inner .item .my-description {
        padding: 20px 25px 0;
        font-size: 16px;
    }

    #myCopy {
        font-size: 16px;
    }

    @@media (max-width: 768px) {
        .carousel-inner .item .my-description {
            min-height: 100px;
        }
    }

    @@media (max-width: 580px) {
        .carousel-inner .item .my-description {
            min-height: 170px;
        }
    }
</style>

<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="jumbotron app-margin-top" id="myJumbotron">
            <div class="text-center" style="padding:0 10px;">
                <h3 class="app-margin-top-none app-margin-bottom app-appyellow my-shadow">Learn&nbsp;English&nbsp;naturally. &nbsp;Pass&nbsp;exam&nbsp;easily.</h3>
            </div>
            <div class="row" id="myContainer">
                <div class="my-space">&nbsp;</div>
                <div id="myList">
                    <ul>
                        <li class="my-indicator active" onclick="mySlideTo(0);">Get your speaking exercises reviewed by teachers</li>
                        <li class="my-indicator" onclick="mySlideTo(1);"><span class="app-appyellow my-shadow">New<span style="margin-left:1px;">!</span></span> Have your <em>handwritten</em> texts reviewed by teachers</li>
                        <li class="my-indicator" onclick="mySlideTo(2);">Let qualified teachers guide your preparation for IELTS</li>
                        <li class="my-indicator" onclick="mySlideTo(3);">Watch hundreds of lessons <span class="app-appyellow my-shadow">for&nbsp;free</span></li>
                    </ul>
                </div>
                @if (!isAuthenticated)
                {
                    <div class="hidden-xs my-space">&nbsp;</div>
                    <div class="hidden-xs" id="myCall">
                        @*@Html.ActionLinkWithProtocol("Join for free", "Signup", "Account", "https", new { @class = "btn btn-primary btn-lg" })*@
                        @Html.ActionLink("Try now", "Index", "ExercisesIelts", null, new { @class = "btn btn-primary btn-lg" })
                    </div>
                }
            </div>

            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="~/content/images/happy-learner.jpg">
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description">
                                You will progress faster if you get professional feedback about your speaking. You can get it any time you need&nbsp;it.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="/content/images/writing.jpg">
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description">
                                You may want to be able to write 150 words in 20 minutes or 250 words in 40 minutes and you may want to know how good your writing is.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <a href='@Url.Action("Ielts", "Info")'>
                                    <img class="img-responsive" src="/content/images/teacher.jpg">
                                </a>
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description" style="padding-top:10px;">
                                You will progress faster and achieve better results if you know what exactly you need to improve. Teachers can help you with setting priorities and correcting your learning plan.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="/content/images/youtube-voa.jpg">
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-0 col-xs-10 col-sm-5 col-md-4 my-description">
                                Although there are so many learning resources available, since they are all categorized and indexed, you can quickly find what you need and even compile your own collection.
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            @if (!isAuthenticated)
            {
                <div class="visible-xs-block text-center app-margin-top">
                    @*@Html.ActionLinkWithProtocol("Join for free", "Signup", "Account", "https", new { @class = "btn btn-primary btn-lg" })*@
                    @Html.ActionLink("Try now", "Index", "ExercisesIelts", null, new { @class = "btn btn-primary btn-lg" })
                </div>
            }

        </div>
    </div>
</div>
<hr class="app-appred" />
<div id="myCopy">
    <div class="text-center">
        <h3 class="app-margin-top-none app-appred">You know the grammar. Are you ready for IELTS?</h3>
    </div>
    <div class="row app-margin-bottom">
        <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-3 col-sm-10 col-md-8 col-lg-6">
            <p>
                You can prepare for IELTS by reading textbooks or watching videos. But being able to do well in the test is a special skill, distinct from simply being smart. You have to be able to perform according to the test format and under strict time constraints.
            </p>
            <p>
                If you want to be good at taking IELTS, you must actually practice taking IELTS. You also need feedback to know how well you are doing and how you can improve your results.
            </p>
            <p>
                The main goal of Englisharium is to provide learners with the best possible options to practice for the IELTS Writing and Speaking tests. Our online tests resemble the original test formats as close as possible. By receiving feedback from our experienced teachers you will know the areas you need to improve before your test day.
            </p>
        </div>
    </div>
    <div class="app-margin-top app-margin-bottom text-center">
        <h3 class="app-appred">No matter where you are in the world,<br /> you can quickly get advice from the best teachers.</h3>
    </div>
    <div class="row">
        <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-3 col-sm-10 col-md-8 col-lg-6">
            <p>
                Although Skype is an awesome teaching medium, scheduling sessions with parties scattered around the globe is a cumbersome process. Our goal is to allow you to ignore time zones and get help from experienced teachers as soon as possible. Our teachers use a rich set of online tools to provide you with comprehensive feedback and point you to relevant learning resources.
            </p>
        </div>
    </div>
    <div class="app-margin-top app-margin-bottom text-center">
        <h3 class="app-appred">The best way to practice for the IELTS Speaking test</h3>
    </div>
    <div class="row">
        <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-3 col-sm-10 col-md-8 col-lg-6">
            <p>
                Simulate a speaking test and record your exercise with the online voice recorder. Our teacher will review the recording of your simulated test and give you advice.
                <a href='@Url.Action("Speaking", "ExercisesIelts")' class="text-nowrap"><strong>Try now</strong><i class="fa fa-chevron-right fa-fw"></i></a>
            </p>
        </div>
    </div>
    <div class="app-margin-top app-margin-bottom text-center">
        <h3 class="app-appred">The best way to practice for the IELTS Writing test</h3>
    </div>
    <div class="row">
        <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-3 col-sm-10 col-md-8 col-lg-6">
            <p>
                Simulate a writing test, upload your handwritten text using a smartphone, then our teacher will review it and suggest ways to improve your results.
                <a href='@Url.Action("Writing", "ExercisesIelts")' class="text-nowrap"><strong>Try now</strong><i class="fa fa-chevron-right fa-fw"></i></a>
            </p>
        </div>
    </div>
</div>
@section BottomScripts {
    <script>
        var setSpace = function () {
            window.setTimeout(function () {
                var cn = $('#myContainer');
                var lt = $('#myList');
                var ca = $('#myCall');
                var caw = ca.outerWidth(); // null if absent, 0 if hidden
                var space = (cn.width() - lt.outerWidth() - caw) / (caw > 1 ? 3 : 2);
                $('.my-space').width(space);
                ca.css('padding-top', '0px'); // Workaround. Otherwise, if the window width jumps from minimum to maximum, cn.height() is bigger and the button is placed too low.
                var cap = (cn.height() - ca.height()) / 2;
                ca.css('padding-top', cap + 'px');
            }, 0);
        };
        $(window).resize(setSpace);
        $().ready(setSpace);

        $('#myCarousel').on('slide.bs.carousel', function (e) {
            var indicators = $('.my-indicator');
            if (indicators.length) {
                indicators.filter('.active').removeClass('active');
                var i = $('#myCarousel .item').index(e.relatedTarget);
                var next = indicators[i];
                next && $(next).addClass('active');
            }
        });

        function mySlideTo(to) {
            $('#myCarousel').carousel(to);
        };

        $(function () {
            $('[data-toggle="popover"]').popover()
        });

    </script>
}
