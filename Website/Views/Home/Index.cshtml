@{
    ViewBag.NavItem = "Home";
    bool isAuthenticated = Request.IsAuthenticated;
}
<style type="text/css">
    #myJumbotron {
        padding: 32px 0;
    }

        #myJumbotron .btn.btn-primary.btn-lg {
            border-top-color: rgb(0,158,234);
            border-left-color: rgb(0,158,234);
            border-right-color: rgb(0,158,234);
        }

    #myContainer {
        margin: 0;
        overflow: hidden;
    }

        #myContainer > div {
            float: left;
        }

    #myList > ul {
        margin: 0;
        padding: 0 5px;
        list-style: none;
        font-size: 16px;
        cursor: pointer;
    }

    #myList li:before {
        display: inline-block;
        margin-right: 10px;
        width: 12px;
        height: 12px;
        border-radius: 12px;
        border: 3px solid #ac1f28; /* appRed */
        background-color: white;
        content: " ";
    }

    #myList li.active:before {
        border-color: white;
    }

    .my-shadow {
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
    }

    #myCall {
        padding-right: 10px;
    }

    #myCarousel {
        margin-top: 32px;
    }

    .carousel-control {
        width: 10%;
    }

    .carousel-inner .item .my-screenshot {
        padding: 0;
        overflow: hidden;
    }

        /* +http://www.cssmatic.com/box-shadow */
        .carousel-inner .item .my-screenshot img {
            margin: 0 auto;
            /*box-shadow: 0px 0px 20px 20px white;*/
            border-radius: 3px;
        }

    .carousel-inner .item .my-description {
        padding: 20px 25px 0;
        font-size: 14px;
    }

    #myCopy {
        font-size: 14px;
    }
</style>

<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="jumbotron app-margin-top" id="myJumbotron">
            <div class="text-center" style="padding:0 10px;">
                <h3 class="app-margin-top-none app-margin-bottom app-appyellow my-shadow">Learn&nbsp;English&nbsp;naturally. &nbsp;Pass&nbsp;exam&nbsp;easily.</h3>
            </div>
            <div class="row" id="myContainer">
                <div class="my-space">&nbsp;</div>
                <div id="myList">
                    <ul>
                        <li class="my-indicator active" onclick="mySlideTo(0);">Watch hundreds of lessons <span class="app-appyellow my-shadow">for&nbsp;free</span></li>
                        <li class="my-indicator" onclick="mySlideTo(1);">Get your speaking exercises reviewed by teachers</li>
                        <li class="my-indicator" onclick="mySlideTo(2);"><span class="app-appyellow my-shadow">New<span style="margin-left:1px;">!</span></span> Have your <em>handwritten</em> texts reviewed by teachers</li>
                        <li class="my-indicator" onclick="mySlideTo(3);">Let qualified teachers guide your preparation for IELTS</li>
                    </ul>
                </div>
                @if (!isAuthenticated)
                {
                    <div class="hidden-xs my-space">&nbsp;</div>
                    <div class="hidden-xs" id="myCall">
                        @Html.ActionLinkWithProtocol("Join for free", "Signup", "Account", "https", new { @class = "btn btn-primary btn-lg" })
                    </div>
                }
            </div>

            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="8000">
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="/content/images/youtube-voa.jpg">
                            </div>
                            <div class="col-sm-4 my-description">
                                Although there are so many learning resources available, since they are all categorized and indexed, you can quickly find what you need and even compile your own collection.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="~/content/images/learner-teddybear.jpg">
                            </div>
                            <div class="col-sm-4 my-description">
                                You will progress faster if you get professional feedback about your speaking. You can get it any time you need&nbsp;it.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <img class="img-responsive" src="/content/images/writing.jpg">
                            </div>
                            <div class="col-sm-4 my-description">
                                You may want to be able to write 150 words in 20 minutes or 250 words in 40 minutes and you may want to know how good your writing is.
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-5 my-screenshot">
                                <a href='@Url.Action("Ielts", "Info")'>
                                    <img class="img-responsive" src="/content/images/teacher.jpg">
                                </a>
                            </div>
                            <div class="col-sm-4 my-description">
                                You will progress faster and achieve better results if you know what exactly you need to improve. Teachers can help you with setting priorities and correcting your learning plan.
                                <a href='@Url.Action("Ielts", "Info")' class="app-margin-left-half"><strong>...</strong><i class="fa fa-chevron-right fa-fw"></i></a>
                            </div>
                        </div>
                    </div>


                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            @if (!isAuthenticated)
            {
                <div class="visible-xs-block text-center app-margin-top">
                    @Html.ActionLinkWithProtocol("Join for free", "Signup", "Account", "https", new { @class = "btn btn-primary btn-lg" })
                </div>
            }

        </div>
    </div>
</div>

<hr class="app-appred" />
<div id="myCopy">
    <div class="row app-margin-bottom">
        <div class="col-md-offset-1 col-lg-offset-2 col-sm-10">
            <h3 class="app-margin-top-none app-appred">Prepare for IELTS Speaking and Writing tests</h3>
        </div>
    </div>
    <div class="row app-margin-bottom">
        <div class="col-sm-5 col-sm-push-6 text-center app-margin-bottom">
            <img src="~/content/images/ielts-test-240.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
        </div>
        <div class="col-md-offset-1 col-lg-offset-2 col-sm-6 col-md-5 col-lg-4 col-sm-pull-5">
            <p>Simulate speaking tests and record your exercises with a voice recorder. Ask competent teachers to review recordings of your simulated tests and find your difficulties.</p>
            <p>Simulate writing tests, upload your handwritten texts using a smartphone, then ask teachers to review them and suggest ways to improve your results.</p>
            <p>Use the library to find learning resources which will help you to prepare for IELTS test.</p>
        </div>
    </div>
    <div class="row app-margin-top app-margin-bottom">
        <div class="col-md-offset-1 col-lg-offset-2 col-sm-10">
            <h3 class="app-appred">The easiest way to practice speaking</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-1 col-lg-offset-2 col-sm-6 col-md-5 col-lg-4">
            <p class="visible-xs-block text-center">
                <img src="/content/images/do-you-speak-english.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
            </p>
            <p>
                You cannot learn to speak English by reading textbooks or watching movies. You need to practice it. And you need feedback to know whether you are speaking correctly.
            </p>
            <p class="visible-xs-block text-center">
                <img src="/content/images/shy-learner.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
            </p>
            <p>
                But the problem is that most people do not like making mistakes publicly, and teachers do not like interrupting students by pointing out every single mistake.
            </p>
            <p class="visible-xs-block text-center">
                <img src="/content/images/learner-teddybear.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
            </p>
            <p>
                There is an idea about how to learn speaking English more comfortably. A teacher can provide feedback to a learner’s speech after it is done, for example, by annotating a record of the speech. This way, we avoid embarrassing the learner.
            </p>
            <p>
                This approach is based on the idea <a href="https://orkelm.wordpress.com/2014/01/07/correct-me-please/" target="_blank">described</a> by Professor Orlando&nbsp;R.&nbsp;Kelm:
                &quot;Here's my strategy. There are two parts: First, I like to have a correction guru, somebody who becomes my go-to person who can tell me what I'm saying wrong. Second part, I like to ask my correction guru to simply listen to my speech, jot a few notes down, and then at a separate time we sit down together to review notes.&quot;
            </p>
        </div>
        <div class="col-sm-5 hidden-xs text-center app-margin-bottom">
            <p>
                <img src="/content/images/do-you-speak-english.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
            </p>
            <p>
                <img src="/content/images/shy-learner.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
            </p>
            <p>
                <img src="/content/images/happy-learner.jpg" class="img-responsive img-thumbnail" width="250" height="170" />
            </p>
        </div>
    </div>
    @if (!isAuthenticated)
    {
        <div class="text-center">
            @Html.ActionLink("Join for free", "Signup", "Account", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>
@section BottomScripts {
    <script>
        var setSpace = function () {
            window.setTimeout(function () {
                var cn = $('#myContainer');
                var lt = $('#myList');
                var ca = $('#myCall');
                var caw = ca.outerWidth(); // null if absent, 0 if hidden
                var space = (cn.width() - lt.outerWidth() - caw) / (caw > 1 ? 3 : 2);
                $('.my-space').width(space);
                ca.css('padding-top', '0px'); // Workaround. Otherwise, if the window width jumps from minimum to maximum, cn.height() is bigger and the button is placed too low.
                var cap = (cn.height() - ca.height()) / 2;
                ca.css('padding-top', cap + 'px');
            }, 0);
        };
        $(window).resize(setSpace);
        $().ready(setSpace);

        $('#myCarousel').on('slide.bs.carousel', function (e) {
            var indicators = $('.my-indicator');
            if (indicators.length) {
                indicators.filter('.active').removeClass('active');
                var i = $('#myCarousel .item').index(e.relatedTarget);
                var next = indicators[i];
                next && $(next).addClass('active');
            }
        });

        function mySlideTo(to) {
            $('#myCarousel').carousel(to);
        };

        $(function () {
            $('[data-toggle="popover"]').popover()
        });

    </script>
}
